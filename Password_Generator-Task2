import string
import random

def password_generator(length):
    # Define the Characters set
    lower_case = string.ascii_lowercase
    upper_case = string.ascii_uppercase
    digits = string.digits
    special_chars = string.punctuation


    # Define all the Characters
    all_characters = string.ascii_letters + string.digits + '!@#$^&*()_-'

    # Check if the length is valid or not
    if length < 8:
        return " Password length should be at least 8 characters. "

    # Generate the password
    password = ''.join(random.choice(all_characters) for _ in range(length))
    
    return password

def main():
    print("Hello! User..")
    ask_user = input("Do you want to get a higly secured password (yes/no):")
    if ask_user == 'yes':
        print("Welcome to the Password Generator!")
    try:
        length = int(input("Enter the  password length : "))
        password = password_generator(length)
        print(f"Your generated password is: {password}")
    except ValueError:
        print("Invalid input. Please enter a valid integer for password length.")
    else:
       print("Sorry!!Come Again")    
    # Check if this script is the main program
print("Hello! User..")
ask_user = input("Do you want to get a higly secured password (yes/no):")
if ask_user == 'yes':
    print("Welcome to the Password Generator!")
    length = int(input("Enter the  password length: "))
    password = password_generator(length)
    print(f"Your generated password is: {password}")
    
else:
    print("Sorry!!Come Again")
